<html>

<head>
	<title>Actors</title>
	<link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='app.css') }}">
	
	<!-- Call the included tempate _nav to render the nav links -->	
	{% include "_nav.j2" %}

	<!-- Dynamic display to show browse or insert -->
	<script type="text/javascript">
	function showform(dowhat) {

		if(dowhat == 'insert') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'block';
		} else { //by default display browse
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'none';
		}
	}

	function newActor() {
		showform('insert');
	}

	function browseActors() {
		showform('browse');
	}

	</script>
</head>

<body onload="browseActors()">
	<br>
    <br>
	<h1>Actors</h1> 	
	
	<div id="browse">

		<p><a href="#" onClick="newActor()">Add New Actor</a></p>

		<!-- Call the included tempate _create_table to render the table -->
		{% set createTbl = 'actors' %}
		{% include "_create_table.j2" %}

	<p>&nbsp;</p>
	</div>

	<div id="insert">

		<!-- Insert actor form -->

		<form id="insertActor" action="/actors" method="post">
			<legend><strong>Add actor below:</strong></legend>
			<fieldset>

				<label for="actor_name">Actor Name:</label>
				<input type="text" class="form-control" id="actor_name" name="actor_name" placeholder="" required>

            </fieldset>

			<!-- Add and cancel buttons -->
			<input type="submit" value="Add Actor" name="Add_Actor" class="btn btn-primary" style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browseActors()"> 

        </form>
	</div>

<footer>
	<p>Created by Michael Hrenko & Allysa Foot. Â© 2020</p>
</footer>
</body>
</html>