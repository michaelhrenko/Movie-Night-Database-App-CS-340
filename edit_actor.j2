<html>

<head>
	<title>Edit Actor</title>
    <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='app.css') }}">
    	
	<!-- Call the included tempate _nav to render the nav links -->	
	{% include "_nav.j2" %}

</head>

<body>
    <br>
    <br>
	<h1>Edit Actor</h1> 

    <div>

		<!-- Call the included tempate _create_table to render the table -->
		{% set createTbl = 'edit_actor' %}
		{% include "_create_table.j2" %}

        <p></p>

        <div id="editActor">

		    <!-- Edit actor form -->

            <form id="editActor" action="/edit_actor/{{data[0].actor_id}}" method="post">
                <legend><strong>Edit actor below:</strong></legend>
                <fieldset>
                    
                    <!-- Create hidden form input to store the actor_id we are editing so we can access it in app.py -->
                    <input type="hidden" value="{{data[0].actor_id}}" class="form-control" id="actor_id" name="actor_id" required>
                    
                    <label for="make">Actor Name:</label>
                    <input type="text" value="{{data[0].actor_name}}" class="form-control" id="actor_name" name="actor_name" required>
                
                </fieldset>

			    <!-- Edit and cancel buttons -->
                <input type="submit" value="Save" name="Edit_Actor" class="btn btn-primary" style="margin:.5rem;">
                <a href='/actors'><input class="btn" type="button" value="Cancel"></a>
            </form>
<footer>
	<p>Created by Michael Hrenko & Allysa Foot. Â© 2020</p>
</footer>
</body>
</html>